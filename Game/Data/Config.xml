<?xml version="1.0" encoding="utf-8"?>

<Configuration>

  <!-- Static configuration -->

  <!-- TODO -->

  <!-- Dynamic configuration -->

  <Constants>

    <!-- Constant settings get overridden by the config.xml.user file -->

    <Constant name="Sound.Enabled" type="bool" value="false"/>

    <!--Constant name="Effect.SSAO.Enabled" type="bool" value="false"/-->

    <Constant name="WindowSettings.Res.Fullscreen" type="bool" value="false"/>
    <Constant name="WindowSettings.Res.UseDesktop" type="bool" value="false"/>
    <Constant name="WindowSettings.Res.Width" type="integer" value="1024"/>
    <Constant name="WindowSettings.Res.Height" type="integer" value="768"/>
    <Constant name="WindowSettings.ShowSplashScreen" type="bool" value="true"/>
    <Constant name="WindowSettings.Res.Centered" type="bool" value="true"/>

    <!-- Random.Enabled indicates if the current session will try to be as unique using srand((unsigned int)time(0)); 
         otherwise a given seed will be used "Random.Seed" -->
    <Constant name="Random.Enabled" type="bool" value="true"/>
    <Constant name="Random.Seed" type="integer" value="42"/>

    <Constant name="HUD.Show" type="bool" value="true"/>
    <Constant name="HUD.Debug.Show" type="bool" value="false"/>

    <Constant name="Camera.PosAt.X" type="float" value="0"/>
    <Constant name="Camera.PosAt.Y" type="float" value="2.5"/>
    <Constant name="Camera.PosAt.Z" type="float" value="2"/>

    <Constant name="Camera.Focus.X" type="float" value="1.3"/>
    <Constant name="Camera.Focus.Y" type="float" value="2.4"/>
    <Constant name="Camera.Focus.Z" type="float" value="-12"/>

  </Constants>
</Configuration>
