<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="VCN3dsExporterLog.VCN3dsExporterLogWindow"
	x:Name="Window"
	Title="VCN3dsExporter Log"
	Width="425" Height="300" WindowStyle="ToolWindow"
    Closing="OnClosing" >

	<Grid x:Name="LayoutRoot">
		<Grid>
			<RichTextBox Margin="10" Name="myRichTextBox" ScrollViewer.VerticalScrollBarVisibility="Auto">
				<FlowDocument Name="myFlowDocument">
					
				</FlowDocument>
			</RichTextBox>
			<Button Content="Clear" Click="ClearContentCallback" Margin="0,0,10,9.96" Width="75" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
		</Grid>
	</Grid>
</Window>